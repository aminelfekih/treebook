<p id="notice"><%= notice %></p>

<div class="page-header">
<h1>All Statuses</h1>
</div>

<% @statuses.each do |status| %>
  <div class="status">
    <p><%= status.name %></p>
    <p><%= status.content %></p>
    <div class="meta">
     <%= link_to 'Show', status %>
      <span class="admin">
        <%= link_to 'Edit', edit_status_path(status) %> <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
      </span>
    </div>   
   </div>
<% end %>

